@model DTO.KayitDTO
@{
    ViewBag.Title = "KayitOl";
    Layout = "~/Areas/Admin/Views/Shared/_SiteLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Areas/Admin/Content/Css/kayitol.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    @using (Html.BeginForm("KayitOl", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h3 class="text-center mt-3">Kayıt Olma Sayfası...</h3>



        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Ad</span>
            </div>
            <div>
                @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

            </div>
        </div>

        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Soyad</span>
            </div>
            <div>
                @Html.EditorFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

            </div>
        </div>
        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Email</span>
            </div>
            <div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "email" } })

            </div>
        </div>
        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Şifre</span>
            </div>
            <div>
                @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })

            </div>
        </div>
        <div class="my-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="sehirTipi">Kayıt Olma Amacı</label>
                </div>
                @Html.DropDownListFor(model => model.Rol,
                      new List<SelectListItem> {
                           new SelectListItem { Value = "" , Text = "Kayıt Olma Amacı" ,Disabled=true,Selected=true},
                           new SelectListItem { Value = "Kullanici" , Text = "Is Aramak.." },
                           new SelectListItem { Value = "Isveren" , Text = "Isvermek.." }
                        },
                      new { @class = "myselect", @required = "required", @onchange = "showsehirTipi()", @id = "sehirTipi" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="_ilankaydet" type="submit" class="btn btn-success" style="float: right;">Kaydet</button>
            </div>
        </div>
    </div>
    }
</body>
</html>
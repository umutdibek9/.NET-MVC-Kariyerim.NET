@model DTO.BasvuruDTO
@{
    ViewBag.Title = "IsDetay";
    Layout = "~/Areas/Admin/Views/Shared/_KullaniciLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Kariyerim.NET</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="~/Areas/Admin/Content/Css/isdetay.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Css/isdetay2.css" rel="stylesheet" />
</head>

<body>
    <br />
    <br />
    <br />

    <form method="post" enctype="multipart/form-data" asp-controller="Kullanici">
        <input type="hidden" id="ID" value="@Model.ID">
        <div class="float-right"><h5>@Model.YayimlamaTarihi</h5></div>
        <div class="mt-3">

            @if (Model.logo != null)
            {
                <img src="@Model.logo" class="rounded mx-auto d-block" style="max-height: 350px; width: auto;" />
            }

            else
            {
                <b>Resim bilgisi yok..</b>
            }
        </div>


        <br>

        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Şirket İsmi</span>

                @Html.EditorFor(model => Model.SirketIsmi, new { htmlAttributes = new { @class = "SirketIsmi", @id = "SirketIsmi", @disabled = "disabled" } })

            </div>

        </div>

        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Açıklama</span>
            </div>
            <div>
                @Html.EditorFor(model => Model.aciklama, new { htmlAttributes = new { @class = "aciklama", @cols = 108, @rows = 3, @disabled = "disabled" } })

            </div>
        </div>
        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Adres</span>
            </div>
            <div>
                @Html.EditorFor(model => Model.adres, new { htmlAttributes = new { @class = "adres", @cols = 108, @rows = 3, @disabled = "disabled" } })

            </div>
        </div>
        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">İl</span>

                @Html.EditorFor(model => Model.il, new { htmlAttributes = new { @class = "il", @id = "il", @disabled = "disabled" } })

            </div>
        </div>
        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">İlçe</span>

                @Html.EditorFor(model => Model.ilce, new { htmlAttributes = new { @class = "ilce", @id = "ilce", @disabled = "disabled" } })

            </div>
        </div>
        <div class="mt-3">
            <div class="input-group-prepend" cols="200">
                <span class="input-group-text">Sektör</span>

                @Html.EditorFor(model => Model.Sektor, new { htmlAttributes = new { @class = "sektor", @id = "sektor", @disabled = "disabled" } })

            </div>
        </div>
        <div class="my-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="cv">Cv</label>
                </div>
                <select id="cvId" name="cvId" class="custom-select">
                    <option value="0" selected disabled>Cv numarası seçiniz...</option>
                    @for (int i = 0; i < Model.cvids.Count(); i++)
                    {
                        <option value="@Model.cvids[i]">#@(i+1)</option>
                    }
                </select>
            </div>
        </div>
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button id="_ilankaydet" type="submit" class="btn btn-success" style="float: right;">İlana Başvur</button>
            </div>
        </div>

    </form>
    <br />



</body>
</html>

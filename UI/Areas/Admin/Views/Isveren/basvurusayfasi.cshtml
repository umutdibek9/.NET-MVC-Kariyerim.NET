@model List<DTO.BasvuruDTO>
@{
    ViewBag.Title = "basvurusayfasi";
    Layout = "~/Areas/Admin/Views/Shared/_IsverenLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Kariyerim.NET</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="~/Areas/Admin/Content/Css/basvurusayfasi.css" rel="stylesheet" />


</head>
<body>
    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h3>Başvurular</h3>
                    </div>
                </div>
            </div>
            <!-- Single Product -->
            @foreach (var i in Model)
            {
                        <div class="col-md-6 col-lg-4 col-xl-3">
                            <div id="product-1" class="single-product">
                                <a href="@Url.Action("KullaniciCvDetay", "Isveren", new { id = i.idler })">
                                    <img src="@i.kullaniciresmi" style="max-height: 150px; width: auto;" />
                                </a>
                            </div>
                            <div class="part-2">
                                <h3 class="product-title">@i.isim</h3>
                            </div>
                        </div>
             
        }
            </div>
        </section>
</body>
</html>
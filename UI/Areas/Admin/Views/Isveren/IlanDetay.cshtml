@model List<DTO.IsilaniDTO>
@{
    ViewBag.Title = "IlanDetay";
    Layout = "~/Areas/Admin/Views/Shared/_IsverenLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Kariyerim.NET</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="~/Areas/Admin/Content/Css/ilandetay.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Css/ilandetay2.css" rel="stylesheet" />

    
</head>

<body>


    @if (Model.Count > 0) {
                    int sayac = 0;
                    foreach (var i in Model)
                    {


        <br />

        <form>
            <div class="float-right"><h5>@i.YayimlamaTarihi</h5></div>
            <div class="mt-3">

                @if (i.logo != null)
            {
                    <img src="@i.logo" class="rounded mx-auto d-block" style="max-height: 350px; width: auto;" />
                }

                else
                {
                    <b>Resim bilgisi yok..</b>
                }
            </div>


            <br>

            <div class="mt-3">
                <div class="input-group-prepend" cols="200">
                    <span class="input-group-text">Şirket İsmi</span>

                    @Html.EditorFor(model => i.SirketIsmi, new { htmlAttributes = new { @class = "SirketIsmi", @id = "SirketIsmi", @disabled = "disabled" } })

                </div>

            </div>

            <div class="mt-3">
                <div class="input-group-prepend" cols="200">
                    <span class="input-group-text">Açıklama</span>
                </div>
                <div>
                    @Html.EditorFor(model => i.aciklama, new { htmlAttributes = new { @class = "aciklama", @cols = 108, @rows = 3, @disabled = "disabled" } })

                </div>
            </div>
            <div class="mt-3">
                <div class="input-group-prepend" cols="200">
                    <span class="input-group-text">Adres</span>
                </div>
                <div>
                    @Html.EditorFor(model => i.adres, new { htmlAttributes = new { @class = "adres", @cols = 108, @rows = 3, @disabled = "disabled" } })

                </div>
            </div>
            <div class="mt-3">
                <div class="input-group-prepend" cols="200">
                    <span class="input-group-text">İl</span>

                    @Html.EditorFor(model => i.il, new { htmlAttributes = new { @class = "il", @id = "il", @disabled = "disabled" } })

                </div>
            </div>
            <div class="mt-3">
                <div class="input-group-prepend" cols="200">
                    <span class="input-group-text">İlçe</span>

                    @Html.EditorFor(model => i.ilce, new { htmlAttributes = new { @class = "ilce", @id = "ilce", @disabled = "disabled" } })

                </div>
            </div>
            <div class="mt-3">
                <div class="input-group-prepend" cols="200">
                    <span class="input-group-text">Sektör</span>

                    @Html.EditorFor(model => i.Sektor, new { htmlAttributes = new { @class = "sektor", @id = "sektor", @disabled = "disabled" } })

                </div>
            </div>
        </form>
        <br />
        if (Model.Count() > sayac + 1)
    {
            <img src="~/Areas/Uploads/Logo/downarrow.png" img="img5" class="center" style="max-height: 150px; width: auto;" />

        }

        sayac++;

        <br />

        }
    }
</body>
</html>
